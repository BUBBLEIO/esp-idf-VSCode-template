{
    "version": "0.1.0",
    "command": "bash",
    "args": [
        "-c"
    ],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}",
        "env": {
            "IDF_PATH": "/home/fhfs/ESP/esp-idf",
            "PATH": "${env.PATH}:/home/fhfs/ESP/xtensa-esp32-elf/bin",
            "projectname": "app-template",
            "openOCDPath": "/home/fhfs/ESP/openocd-esp32",
            "XtensaEsp32ELFBinPath": "/home/fhfs/ESP/xtensa-esp32-elf/bin"
        }
    },
    "tasks": [
        {
            "taskName": "Build",
            "suppressTaskName": true,
            "args": [
                "make -j8 all"
            ],
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Clean",
            "suppressTaskName": true,
            "args": [
                "make clean"
            ]
        },
        // {    // Doesn't work, cannot intergrate monitor in vscode console
        //     "taskName": "Monitor",
        //     "suppressTaskName": true,
        //     "args": [
        //         "make monitor"
        //     ]
        // },
        {
            "taskName": "Flash",
            "suppressTaskName": true,
            "args": [
                "make flash"
            ]
        },
        {
            "taskName": "OpenOCD",
            "suppressTaskName": true,
            "args": [
                "openocd -s ${openOCDPath}/tcl -f ${openOCDPath}/esp32.cfg" //-c \"adapter_khz 3000\"
            ]
        },
        // {
        //     "taskName": "CBF", //clean build flash
        //     "suppressTaskName": true,
        //     "args": [
        //         "make clean && make -j8 all && make flash"
        //     ]
        // },
        {
            "taskName": "DumpELF",
            // "suppressTaskName": true,
            "args": [
                "xtensa-esp32-elf-objdump -x build/${projectname}.elf > ${projectname}ObjDump.txt"
            ]
        }
    ]
}